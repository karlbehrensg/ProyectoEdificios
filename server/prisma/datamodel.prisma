enum Role {
  ADMIN
  BUILD
  SUPERADMIN
}

type User {
  id: ID! @id
  email: String! @unique
  username: String! @unique
  password: String!
  state: Boolean! @default(value: true)
  role: Role! @default(value: BUILD)
  build: Building @relation(link: INLINE)
  shipments: [Shipment!]
  visits: [Visit!]
  auth: [AuthUser!]
}

type AuthUser {
  id: ID! @id
  login: DateTime! @createdAt
  logout: DateTime! @updatedAt
  state: Boolean!
  user: User! @relation(link: INLINE)
}

type Building {
  id: ID! @id
  title: String! @unique
  deps: [Departament!]!
  user: User
}

type Departament {
  id: ID! @id
  num: String!
  building: Building @relation(link: INLINE)
  owner: [Person!]!
  visits: [Visit!]!
  shipments: [Shipment!]!
}

type Person {
  id: ID! @id
  rut: String! @unique
  email: String
  phone: String
  name: String!
  lastName: String!
  dep: Departament @relation(link: INLINE)
}

type Visit {
  id: ID! @id
  date: DateTime! @createdAt
  patent: String
  person: PersonVisit! @relation(link: INLINE)
  depto: Departament! @relation(link: INLINE)
  user: User! @relation(link: INLINE)
}

type PersonVisit {
  id: ID! @id
  rut: String! @unique
  name: String!
  comment: String
  lastName: String!
  visits: [Visit!]!
}

type PersonShipmnet {
  id: ID! @id
  rut: String! @unique
  name: String!
  shipments: [Shipment!]!
}

type Shipment {
  id: ID! @id
  date: DateTime! @createdAt
  description: String
  person: PersonShipmnet! @relation(link: INLINE)
  dep: Departament! @relation(link: INLINE)
  user: User! @relation(link: INLINE)
}
